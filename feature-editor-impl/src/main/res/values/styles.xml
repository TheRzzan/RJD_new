<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->
    <style name="Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.Primary.Header">
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textSize">@dimen/text_primary_size</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textSize">@dimen/text_secondary_size</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="TextView.Primary">
        <item name="android:textAppearance">@style/Text.Primary</item>
    </style>

    <style name="TextView.Secondary">
        <item name="android:textAppearance">@style/Text.Secondary</item>
    </style>

    <style name="TextView.Primary.Header">
        <item name="android:textAppearance">@style/Text.Primary.Header</item>
    </style>

    <style name="FABStyle">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:textSize">@dimen/text_secondary_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ContactPhotoStyle">
        <item name="android:layout_height">@dimen/contact_photo_size</item>
        <item name="android:layout_width">@dimen/contact_photo_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/text_secondary_size</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>